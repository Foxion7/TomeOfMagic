<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frgLayoutSchools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:gravity="center"
    android:minHeight="300dp"
    android:minWidth="150dp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Spellbook.FilterSchoolsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAbjuration"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Abjuration:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbAbjuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvConjuration"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Conjuration:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbConjuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDivination"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Divination:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbDivination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEnchantment"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Enchantment:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbEnchantment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEvocation"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Evocation:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbEvocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIllusion"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Illusion:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbIllusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNecromancy"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Necromancy:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbNecromancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTransmutation"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Transmutation:"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbTransmutation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>